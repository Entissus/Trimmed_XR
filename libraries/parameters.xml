<diff>
	<replace sel="/parameters/docking/dock[@tags='dock_s']/maxoffsets">
		<maxoffsets>
			<!--S ships have a maximum length and width of 35m - when pitched or rolled by 2 degrees the bottom can deviate from the center offset by sin(2deg) * 17.5m = 0.6m, so the height tolerance needs to be higher than that!-->
			<maxoffset>
			  <position x="10" y="25" z="10" />
			  <rotation pitch="10" yaw="10" roll="10" />
			</maxoffset>
			<maxoffset software="software_dockmk1">
			  <position x="20" y="35" z="20" />
			  <rotation pitch="30" yaw="30" roll="30" />
			</maxoffset>
			<maxoffset software="software_dockmk2">
			  <position x="50" y="50" z="50" />
			  <rotation pitch="89" yaw="179" roll="179" />
			</maxoffset>
		</maxoffsets>
	</replace>
	<replace sel="/parameters/docking/dock[@tags='dock_m']/maxoffsets">
		<maxoffsets>
			<!--M ships have a maximum length of 150m - when pitched by 2 degrees the bottom can deviate from the center offset by sin(2deg) * 75m = 2.6m, so the height tolerance needs to be higher than that!-->
			<maxoffset>
			  <position x="20" y="30" z="20" />
			  <rotation pitch="10" yaw="10" roll="10" />
			</maxoffset>
			<maxoffset software="software_dockmk1">
			  <position x="40" y="50" z="40" />
			  <rotation pitch="30" yaw="30" roll="30" />
			</maxoffset>
			<maxoffset software="software_dockmk2">
			  <position x="100" y="100" z="100" />
			  <rotation pitch="89" yaw="179" roll="179" />
		</maxoffset>
      </maxoffsets>
	</replace>	
</diff>
	